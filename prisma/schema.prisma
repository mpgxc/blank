generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model clientes {
  id         Int          @id @default(autoincrement())
  nome       String       @db.VarChar(50)
  limite     Int
  saldos     saldos[]
  transacoes transacoes[]
}

model saldos {
  id         Int      @id @default(autoincrement())
  cliente_id Int
  valor      Int
  clientes   clientes @relation(fields: [cliente_id], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "fk_clientes_saldos_id")
}

model transacoes {
  id           Int      @id @default(autoincrement())
  cliente_id   Int
  valor        Int
  tipo         String   @db.Char(1)
  descricao    String   @db.VarChar(10)
  realizada_em DateTime @default(now()) @db.Timestamp(6)
  clientes     clientes @relation(fields: [cliente_id], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "fk_clientes_transacoes_id")
}
